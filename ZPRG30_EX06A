REPORT ZPRG30_EX06A MESSAGE-ID ZCM30.

TABLES: T005H.
DATA: V_QUANT TYPE I.

SELECTION-SCREEN BEGIN OF BLOCK B01 WITH FRAME TITLE TEXT-001.

  PARAMETERS: P_LAND1 LIKE T005H-LAND1 OBLIGATORY DEFAULT 'US',
              P_SPRAS LIKE T005H-SPRAS OBLIGATORY DEFAULT SY-LANGU.

SELECTION-SCREEN END OF BLOCK B01.

START-OF-SELECTION.

FORM SELECAO_DADOS.

  SELECT * FROM T005H WHERE LAND1 EQ P_LAND1 ORDER BY CITYC.
    WRITE: / 'Código País: ', T005H-LAND1,
           / 'Descrição: '  , T005H-BEZEI.
    ADD 1 TO V_QUANT.
  ENDSELECT.

IF SY-SUBRC NE 0.
  MESSAGE I000 WITH 'Cidade (T005H)'.
  ELSE.
    ULINE.
    WRITE: / 'Foram listados(s): ', V_QUANT, 'Registro(s)'.
ENDIF.
ENDFORM.

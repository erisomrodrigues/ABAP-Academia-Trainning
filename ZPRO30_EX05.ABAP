REPORT ZPRO30_EX05.

SELECTION-SCREEN BEGIN OF BLOCK BLOCO1 WITH FRAME TITLE TEXT-001.
PARAMETERS: P_ALUN(30) TYPE C OBLIGATORY,
            P_CURS(10) TYPE C OBLIGATORY DEFAULT 'ABAP',
            P_UNIV(30) TYPE C OBLIGATORY.
SELECTION-SCREEN END OF BLOCK BLOCO1.

SELECTION-SCREEN BEGIN OF BLOCK BLOCO2 WITH FRAME TITLE TEXT-002.
PARAMETERS: P_APROV RADIOBUTTON GROUP GP1,
            P_REPRO RADIOBUTTON GROUP GP1,
            P_RECUP RADIOBUTTON GROUP GP1 DEFAULT 'X'.
SELECTION-SCREEN END OF BLOCK BLOCO2.

SELECTION-SCREEN BEGIN OF BLOCK BLOCO3 WITH FRAME TITLE TEXT-003.
PARAMETERS: P_LOGI AS CHECKBOX DEFAULT 'x',
            P_ABAP AS CHECKBOX,
            P_FUNC AS CHECKBOX DEFAULT 'X',
            P_DICI AS CHECKBOX.
SELECTION-SCREEN END OF BLOCK BLOCO3.

START-OF-SELECTION.

  WRITE: / 'Universidade :',  P_UNIV,
         / 'Nome do Aluno :', P_ALUN,
         / 'Curso :',         P_CURS.

SKIP.

IF P_APROV = 'X'.
  WRITE: ICON_CHECKED AS ICON, 'Aprovado'.
ELSEIF P_REPRO = 'X'.
  WRITE: ICON_INCOMPLETE AS ICON, 'Reprovado'.
ELSEIF P_RECUP = 'X'.
  WRITE: ICON_INCOMPLETE AS ICON, 'Recuperação'.
ENDIF.

IF P_LOGI <> SPACE.
  WRITE: / 'Lógica de programação'.
ENDIF.

IF NOT P_ABAP IS INITIAL.
  WRITE: / 'Abap'.
ENDIF.

IF P_FUNC NE ''.
  WRITE: / 'Função'.
ENDIF.

IF P_DICI EQ 'X'.
  WRITE: / 'Dicionario'.
ENDIF.
